<UserControl x:Class="TaskBoard.Client.UI.AdditionalControls.ColumnControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 BorderThickness="3,0,0,0" BorderBrush="Silver"
			 Width="240">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Name="LabelColumnHeader" HorizontalContentAlignment="Center" />

		<StackPanel Grid.Row="1" Name="StackPanelTaskControls" />
	</Grid>
</UserControl>
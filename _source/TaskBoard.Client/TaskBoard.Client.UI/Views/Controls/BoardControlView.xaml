<c:MetroContentControl x:Class="TaskBoard.Client.UI.Views.Controls.BoardControlView"
					   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					   xmlns:c="http://metro.mahapps.com/winfx/xaml/controls"
					   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					   xmlns:viewControls="clr-namespace:TaskBoard.Client.UI.Views.Controls"
					   xmlns:di="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
					   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
					   d:DataContext="{Binding Source={StaticResource BoardControlViewModel}}"
					   di:DialogParticipation.Register="{Binding}">
	<ItemsControl ItemsSource="{Binding ColumnControlViewModels, UpdateSourceTrigger=PropertyChanged}">
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<StackPanel Orientation="Horizontal" />
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<viewControls:ColumnControlView Content="{Binding}" />
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</c:MetroContentControl>
<c:MetroWindow x:Class="TaskBoard.Client.UI.Views.MainView"
			   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			   xmlns:c="http://metro.mahapps.com/winfx/xaml/controls"
			   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
			   xmlns:viewControls="clr-namespace:TaskBoard.Client.UI.Views.Controls"
			   xmlns:di="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
			   Title="MainView" Height="600" Width="1200"
			   di:DialogParticipation.Register="{Binding}"
			   DataContext="{Binding MainViewModel, Source={StaticResource Locator}}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<ComboBox Grid.Row="0" ItemsSource="{Binding BoardModels, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedBoardModel, Mode=TwoWay}">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="DropDownOpened">
					<i:InvokeCommandAction Command="{Binding RefreshBoardModelsCommand}" />
				</i:EventTrigger>
			</i:Interaction.Triggers>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<viewControls:BoardControlView Grid.Row="1" DataContext="{Binding BoardControlViewModel, UpdateSourceTrigger=PropertyChanged}" />
	</Grid>
</c:MetroWindow>